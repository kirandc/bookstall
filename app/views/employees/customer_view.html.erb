<table border=1 style="border-collapse:collapse; text-align:center" width=100%>
  <thead>
    <tr>
      <th width=10%>Cust. ID</th>
      <th width=20%>Customer Name</th>
      <th width=10%>Month/Year</th>
      <th width=40%>Papers</th>
      <th width=10%>Amount</th>
      <th width=5%>Paid</th>
      <th width=5%>Unpaid</th>
    </tr>
  </thead>
  <tbody>
    <% for customer in @employee.customers %>
      <tr height="10px;">
        <td><%= customer.custid %></td>
        <td><%= link_to "#{customer.first_name} #{customer.middle_name} #{customer.last_name}", :action => "show", :id => customer.id %></td>
        <td><%= get_month(@month.to_i) %>/<%= @year %></td>
          <td>
	  <% customer_bills = customer.bills.find(:all, :conditions => ["month = ? and year = ?",@month, @year ] ) %>
	  <% customer_bills.each do |customer_bill| %>
		<%= customer_bill.paper.initial %>,
          <% end %>
	  </td>
          <td><%= customer.bills.sum(:amount, :conditions => ["month = ? and year = ?",@month, @year ] ) %></td>
          <td></td>
	  <td></td>
        </tr>
        <% end if @employee.customers  %>
      </tbody>
    </table>


