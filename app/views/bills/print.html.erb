          <th>Day</th>
          <th>Qnt</th>
          <th>Price</th>
        </tr>
        <tr><td colspan="4"><hr/></td></tr>
        <% total = 0.0 %>
        <% customer_bills.each do |customer_bill| %>
          <% if customer_bill.paper.paper_month_year == "Monthly" %>  
            <tr>
              <td><%= customer_bill.paper.name %> </td><td><%= get_paper_day(customer_bill.paper) %> </td><td> <%= get_paper_qunt(customer_bill.paper) %></td><td><%= customer_bill.amount %></td>
            </tr>
            <% total += customer_bill.amount.to_f %>
          <%end%>
        <% end %>
        <tr><td colspan="4"><hr/></td></tr>
        <tr><td colspan="4" style="font-size:12px;">Total amount: <%= total.to_f +  pending_amount.to_f %></td></tr>
      </table>
    </div>
    <div style="float:left;margin-left:90px;">Signature</div>
  </div>
<% end %>
<% end if !@customers.blank?%>
  <% else %>
    <% counter = 1%>
    <div style="width:850px;">
      <% @customers.each do | customer | %>
        <% customer_bills = customer.bills.find(:all, :conditions => [" month = ? and year = ?", @month, @year]) %>
